@{
    Layout = null;
}


@model Pharmscy_Management.Models.Candidate


<!DOCTYPE html>

<html>
<head>

    <title>Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Design/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/Design/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="~/Design/assets/js/morris/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Design/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    

</head>
<body>
    <div>

        

        <div class="container">
            <div class="row text-center ">
                <div class="col-md-12">
                    <br /><br />
                    <h2> User : Login</h2>

                    <h5>( Login yourself to get access )</h5>
                    <br />
                </div>
            </div>
            <div class="row ">

                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>   Enter Details To Login </strong>
                        </div>
                        <div class="panel-body">
                            <span style="color:red;">@ViewBag.Error</span>


                            @using (Html.BeginForm("user_LogIn", "Home", FormMethod.Post))
                            {
                                <form role="form">
                                    <br />
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                                        @Html.TextBoxFor(x => x.User_Email, new { @class = "form-control", placeholder = "Your Email " })
                                    </div>
                                    <div class="form-group input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        @Html.TextBoxFor(x => x.User_Password, new { @class = "form-control", placeholder = "Your Password " })
                                    </div>
                                    <div class="form-group">
                                        <label class="checkbox-inline">
                                            <input type="checkbox" /> Remember me
                                        </label>
                                        <span class="pull-right">
                                            <a href="#">Forget password ? </a>
                                        </span>
                                    </div>

                                    <input type="submit" class="btn btn-primary " value="Login Now" />
                                    <hr />
                                    Not register ? <a href="@Url.Action("User_Registration","Home")">click here </a>
                                </form>

                            }

                        </div>

                    </div>
                </div>


            </div>
        </div>

    </div>

    <!-- JQUERY SCRIPTS -->
    <script src="~/Design/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="~/Design/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="~/Design/assets/js/jquery.metisMenu.js"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="~/Design/assets/js/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Design/assets/js/morris/morris.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="~/Design/assets/js/custom.js"></script>

    
</body>
</html>
